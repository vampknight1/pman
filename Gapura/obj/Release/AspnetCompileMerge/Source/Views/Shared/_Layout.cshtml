<!DOCTYPE html>

<html lang="en">
<head>
    <!-- start: Meta -->
    <meta charset="utf-8">
    <title>@ViewBag.Title - GAPURA</title>
    <meta name="description" content="Gapura">
    <meta name="author" content="Firmansyah Adi Putra">
    <meta name="keyword" content="GAPURA">
    <!-- end: Meta -->
    <!-- start: Mobile Specific -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- end: Mobile Specific -->
    <!-- start: CSS -->
    @*<link id="bootstrap-style" href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/bootstrap-responsive.min.css" rel="stylesheet">
    <link id="base-style" href="~/css/style.css" rel="stylesheet">
    <link id="base-style-responsive" href="~/css/style-responsive.css" rel="stylesheet">
    <link href="/Content/fonts/font.css" rel="stylesheet" type='text/css'>*@
    @Styles.Render("~/Content/main")
    <!-- end: CSS -->
    <!-- The HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
<script 
src="~/http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
<link id="ie-style" href="~/css/ie.css" rel="stylesheet">
<![endif]-->
    <!--[if IE 9]>
<link id="ie9style" href="~/css/ie9.css" rel="stylesheet">
<![endif]-->
    <!-- start: Favicon -->
    <link rel="shortcut icon" href="~/img/favicon.ico">
    <!-- end: Favicon -->
    @Scripts.Render("~/bundles/modernizr")
    @*<script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>*@
    @Scripts.Render("~/bundles/jquery")

    <style>
        a.submenu span {
            margin-left: 10px !important;
        }

        span.icon-sort {
            margin-left: 3.5em !important;
            float: right;
        }
    </style>
</head>
<body>
    <!-- start: Header -->
    <div class="navbar">
        <div class="navbar-inner">
            <img class="logo" width="117" height="40" style="float:right" src="@Url.Content("~/Content/img/logo.png")" />
            <div class="container-fluid">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".top-nav.nav-collapse,.sidebar-nav.nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="~/home/Index"><span>GA Purchasing Administration</span></a>
                <!-- start: Header Menu -->
                @Html.Partial("_HeadNavigation")
                <!-- end: Header Menu -->
            </div>
        </div>
    </div>
    <!-- start: Header -->
    <div class="container-fluid-full">
        <div class="row-fluid">
            <!-- start: Main Menu -->
            @Html.Partial("_LeftNavigation")
            <!-- end: Main Menu -->
            <noscript>
                <div class="alert alert-block span10">
                    <h4 class="alert-heading">Warning!</h4>
                    <p>
                        You need to have <a href="~/http://en.wikipedia.org/wiki/JavaScript"
                            target="_blank">JavaScript</a> enabled to use this site.
                    </p>
                </div>
            </noscript>
            <!-- start: Content Container -->
            <div id="content" class="span10">
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="~/home/Index">Home</a>
                        <i class="icon-arrow-right"></i>
                    </li>
                    <li><a href="#">@ViewBag.Title</a></li>
                    @*<li><i class="icon-arrow-right"></i><a href="#">@ViewBag.Action</a></li>*@
                </ul>
                <!-- start: Page Content -->
                @RenderBody()
                <!-- end: Page Content -->
            </div>
            <!--/.fluid-container-->
            <!-- end: Content Container -->
        </div>
        <!--/#content.span10-->
    </div>
    <!--/fluid-row-->
    <div class="clearfix"></div>
    <footer>
        @Html.Partial("_Footer")
    </footer>

    <!-- start: JavaScript-->

    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/min")
    @Scripts.Render("~/bundles/js")
    @Scripts.Render("~/bundles/dataTablesLayout")
    @Scripts.Render("~/bundles/knockout")

    @RenderSection("Scripts", false)

    <!-- end: JavaScript-->
</body>
</html>