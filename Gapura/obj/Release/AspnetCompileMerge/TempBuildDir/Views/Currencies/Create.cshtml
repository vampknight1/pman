@model Gapura.Models.MasterCurrency

@{
    ViewBag.Title = "Create Currency";
}

<div class="row-fluid sortable">
    <div class="box span12" style="margin-left: 0px">
        <div class="box-header" data-original-title>
            <h2><i class="icon-pencil"></i><span
                class="break"></span>Create Currency</h2>
            <div class="box-icon">
                @*<a href="~/Products/Index" class="btn-setting"><i class="halflings-icon wrench"></i></a>*@
                <a href="@Url.Action("Index")"
                    title="Return to Index List" >
                    <i class="halflings-icon chevron-up"></i><span class="hidden-tablet"></span>
                </a>
                <a href="~/Home/Index" class="btn-close"
                    title="Return to Homepage">
                    <i class="halflings-icon remove"></i>
                </a>
            </div>
        </div>
        <div class="box-content">

            @using (Html.BeginForm("Create", "Currencies", FormMethod.Post, new
        {
            @class = "form-horizontal"
        }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <fieldset>
                    <legend></legend>

                    <div class="editor-label">
                        @Html.Label("CurrencyCode", "Currency Code", new { @class = "control-label" })

                        @Html.EditorFor(model => model.CurrencyCode)
                        @Html.ValidationMessageFor(model => model.CurrencyCode)
                    </div>

                    <div class="editor-label">
                        @Html.Label("CurrencyName", "Currency Name", new { @class = "control-label" })

                        @Html.EditorFor(model => model.CurrencyName)
                        @Html.ValidationMessageFor(model => model.CurrencyName)
                    </div>

                    <div class="form-actions">
                        <a class="btn btn-success" href="#" onclick="$('form').submit();">Save</a>
                        <input type="reset" value="Reset" class="btn" />
                        <a href="@Url.Action("Index")" class="btn btn-info">Cancel</a>
                    </div>
                </fieldset>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    }
<style>
    div.editor-label {
        margin-bottom: 14px !important;
    }
</style>