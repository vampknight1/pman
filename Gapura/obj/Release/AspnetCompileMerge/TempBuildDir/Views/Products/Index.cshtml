@model IEnumerable<Gapura.Models.Product>

@{
    ViewBag.Title = "Index Item Products";
}

<div class="row-fluid sortable">
    <div class="box span12" style="margin-left: 0px">
        <div class="box-header" data-original-title>
            <h2><i class="icon-table"></i><span
                class="break"></span>Master Data Items</h2>
            <div class="box-icon">
                <a href="@Url.Action("Create", "Products")">
                    <i class="halflings-icon plus"></i><span class="hidden-tablet"></span>
                    Add New Item
                </a>
            </div>
        </div>
        <div class="box-content">

            <div style="width: inherit; margin-left: 0px;">
                <table id="myTable" class="compact stripe hover order-column responsive" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>-</th>
                            <th>Item Code
                            </th>
                            <th>Category
                            </th>
                            <th>Item Name
                            </th>
                            <th>Company
                            </th>
                            <th>Qty Per- Unit
                            </th>
                            <th>Unit Price
                            </th>
                            <th>Unit Name
                            </th>
                            <th>Specs.
                            </th>
                            <th>Re- Order Level
                            </th>
                            <th>End Prod.
                            </th>
                            <th>Input Date
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>

            @* Load datatable js *@
            @section Scripts{
                @Scripts.Render("~/bundles/dataTables")
                <script src="~/Scripts/dataTables/dataTables.fixedHeader.min.js"></script>

                <script>
                    $(document).ready(function () {
                        $('#myTable').DataTable({
                            "ajax": {
                                "url": "/Products/LoadData",
                                "type": "GET",
                                "datatype": "json",
                            },
                            "columns": [
                                 {
                                     //"data": null,
                                     //"className": "center",
                                     "data": "ProductID", "width": "4%", "render": function (data) {
                                         return '<a class="btn btn-info" href="/Products/Edit/' + data + '"><i class="halflings-icon white edit"></i></a>' +
                                                 '<a class="btn btn-danger" href="/Products/Delete/' + data + '"><i class="halflings-icon white trash"></i></a>' +
                                                 '<a class="btn btn-success" href="/Products/Details/' + data + '"><i class="halflings-icon white zoom-in"></i></a>'
                                     }
                                 },
                                { "data": "ProductCode", "width": "10%" },
                                { "data": "CategoryName", "width": "10%" },
                                { "data": "ProductName", "width": "20%" },
                                { "data": "CompanyName", "width": "10%" },
                                { "data": "QuantityPerUnit", "width": "5%" },
                                { "data": "UnitPrice", "width": "7%", "render": $.fn.dataTable.render.number(',', '.', 0, '') },
                                { "data": "UnitName", "width": "4%" },
                                { "data": "Specs", "width": "15%" },
                                { "data": "ReorderLevel", "width": "3%" },
                                { "data": "Discontinued", "width": "4%" },
                                { "data": "FirstInputDate", "width": "12%" }
                            ],
                            //"pagingType": "simple_numbers",
                            "pagingType": "full_numbers",
                            "info": true,
                            "sScrollCollapse": true,
                            "sScrollX": true,
                            "sScrollY": "55vh",
                            "sScrollCollapse": true,
                            "bSort": true,
                            "dom": "frtip",
                            "width": "100%"
                        });
                        dataTable.table.on('draw', function () {
                            $('button[data-type="delete"]').click(function () {
                                var $button = $(this);
                            });

                            $('button[data-type="edit"]').click(function () {
                            });
                        });
                    })
                </script>
            }
        </div>
    </div>
</div>
<style>
    th {
        background-color: #cdcdcd !important;
        border: dotted 1px;
        /*padding-left: 6px;*/
    }
    td {
        border: dotted 1px;
        /*padding-left: 6px;*/
    }
</style>

@Styles.Render("~/Content/dataTables")