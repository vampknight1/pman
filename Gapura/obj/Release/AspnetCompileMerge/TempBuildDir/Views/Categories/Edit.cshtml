@model Gapura.Models.Category

@{
    ViewBag.Title = "Edit Category";
}

<div class="row-fluid sortable">
    <div class="box span12" style="margin-left: 0px">
        <div class="box-header" data-original-title>
            <h2><i class="icon-edit"></i><span
                class="break"></span>Edit Category Items</h2>
            <div class="box-icon">
                @*<a href="~/Products/Index" class="btn-setting"><i class="halflings-icon wrench"></i></a>*@
                <a href="@Url.Action("Index")"
                    title="Return to Index List" >
                    <i class="halflings-icon chevron-up"></i><span class="hidden-tablet"></span>
                </a>
                <a href="~/Home/Index" class="btn-close"
                    title="Return to Homepage">
                    <i class="halflings-icon remove"></i>
                </a>
            </div>
        </div>
        <div class="box-content">

            @using (Html.BeginForm("Edit", "Categories", FormMethod.Post, new
        {
            @class = "form-horizontal"
        }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <fieldset>
                    <legend></legend>

                    @Html.HiddenFor(model => model.CategoryID)

                    <div class="editor-label">
                        @Html.Label("CategoryName", "Category Name", new { @class = "control-label" })

                        @*@Html.TextBox("CategoryName", "", new { @class = "span6 typeahead", @title = "Input Category Name" })*@
                        @Html.EditorFor(model => model.CategoryName)
                        @Html.ValidationMessageFor(model => model.CategoryName)
                    </div>

                    <div class="editor-label">
                        @Html.Label("Description", "Description", new { @class = "control-label" })

                        @*@Html.TextArea("Description", String.Empty, new { @rows = "5", @class = "span6 typeahead" })*@
                        @Html.TextAreaFor(model => model.Description)
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>

                    <div class="form-actions">
                        <a class="btn btn-success" href="#" onclick="$('form').submit();">Save</a>
                        <input type="reset" value="Reset" class="btn" />
                        <a href="@Url.Action("Index")" class="btn btn-info">Cancel</a>
                        <a href="@Url.Action("Delete", new { id = @Html.DisplayFor(model => model.CategoryID) })" class="btn btn-danger">Delete</a>
                    </div>
                </fieldset>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    }
<style>
    div.editor-label {
        margin-bottom: 14px !important;
    }
</style>